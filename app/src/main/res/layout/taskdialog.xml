<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="220sp"
        android:layout_gravity="center"
        android:background="@drawable/custom_relative_layout">

        <EditText
            android:id="@+id/etNewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/dialogHint"
            android:inputType="text"
            android:layout_marginTop="45dp"/>
        <Button
            android:id="@+id/btnAddNewName"
            android:text="@string/dialogBtnUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"/>
        <Button
            android:id="@+id/btnDeleteTask"
            android:text="@string/dialogBtnDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"/>

    </RelativeLayout>

</LinearLayout>