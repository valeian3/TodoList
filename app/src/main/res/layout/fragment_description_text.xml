<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/new_task_etMargin"
        android:textSize="40sp"/>

    <TextView
        android:id="@+id/tvNameTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="@dimen/new_task_tvEnterName"
        android:text="@string/tvSubTaskName"
        android:textSize="25sp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/etSubTaskName"
            android:layout_width="@dimen/fEditTextWight"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fDescription"
            android:hint="@string/fHint"
            android:inputType="text" />

        <Button
            android:id="@+id/btnAddSubTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fBtnAddSubTask"
            android:text="@string/new_task_btnAdd"
            android:textColor="@color/white"
            android:background="@drawable/custom_button_add_task"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btnDone"
        android:layout_width="@dimen/new_task_btnAddWeight"
        android:layout_height="@dimen/new_task_btnAddHeight"
        android:layout_marginTop="@dimen/new_task_etMargin"
        android:layout_gravity="center"
        android:text="@string/fBtnDone"
        android:textColor="@color/white"
        android:background="@drawable/custom_button_add_task"/>

</LinearLayout>
